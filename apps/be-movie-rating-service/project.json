{
    "name": "be-movie-rating-service",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/be-movie-rating-service/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "webpack-cli build",
                "args": ["--node-env=production"]
            },
            "configurations": {
                "development": {
                    "args": ["--node-env=development"]
                }
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "be-movie-rating-service:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "be-movie-rating-service:build:development"
                },
                "production": {
                    "buildTarget": "be-movie-rating-service:build:production"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
              "jestConfig": "apps/be-movie-rating-service/jest.config.ts",
              "passWithNoTests": true
            }
        },
          "test:unit": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
              "jestConfig": "apps/be-movie-rating-service/jest.config.ts",
              "passWithNoTests": true
            }
        }
    }
}
